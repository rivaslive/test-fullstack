{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["./src", "./@types"],
  "exclude": ["node_modules", "**/node_modules/*", ".eslintrc"]
}
